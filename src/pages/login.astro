---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Login">
  <div class="flex flex-col items-center justify-center h-screen">
    <a href="https://burmanhospitality.com/"
      ><img alt="Burman Hospitality" height="30px" src="/static/logo.svg" /></a
    ><br />
    <a
      href="/auth/entra"
      class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
      >Login with @burmanhospitality.com account</a
    >
    <br />
    <h1 class="padded">Please Login to Proceed</h1>
  </div>
</Layout>

<style>
  h1 {
    color: white;
  }
</style>
